{
  "name": "Hugo",
  "image": "mcr.microsoft.com/devcontainers/hugoblox:0-hugo",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "updateContentCommand": "npm install -g pnpm && pnpm install",
  "postCreateCommand": "hugo version",
  "customizations": {
    "vscode": {
      "extensions": [
        "hugoblox.hugoblox-studio"
      ]
    }
  },
  "forwardPorts": [1313],
  "remoteUser": "vscode"
}
